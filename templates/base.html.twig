                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }
            main {
                flex: 1;
            }
            .footer {
                background-color: #343a40;
                color: white;
                padding: 1.5rem 0;
                margin-top: auto;
            }
            .footer a {
                color: #adb5bd;
                text-decoration: none;
                transition: color 0.3s;
            }
            .footer a:hover {
                color: white;
                text-decoration: none;
            }
            .footer-title {
                font-weight: 700;
                margin-bottom: 0.75rem;
                color: white;
                font-size: 1.1rem;
            }
            .footer-links {
                list-style: none;
                padding-left: 0;
                margin-bottom: 1rem;
            }
            .footer-links li {
                margin-bottom: 0.3rem;
            }
            .social-icons {
                margin-top: 0.5rem;
                margin-bottom: 1rem;
            }
            .social-icons a {
                display: inline-block;
                margin-right: 0.75rem;
                font-size: 1.25rem;
            }
            .copyright {
                border-top: 1px solid #495057;
                padding-top: 0.75rem;
                margin-top: 1rem;
                text-align: center;
                color: #adb5bd;
                font-size: 0.8rem;
            }
            .legal-btn {
                background: none;
                border: 1px solid #495057;
                color: #adb5bd;
                padding: 0.25rem 0.75rem;
                border-radius: 4px;
                font-size: 0.85rem;
                transition: all 0.3s;
            }
            .legal-btn:hover {
                background-color: rgba(255,255,255,0.05);
                color: white;
            }
			    html, body {
        height: 100%;
    }
    body {
        display: flex;
        flex-direction: column;
    }
    main {
        flex: 1 0 auto;
    }
    .footer {
        flex-shrink: 0;
    }

