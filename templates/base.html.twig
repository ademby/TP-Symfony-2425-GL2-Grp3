    {% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body>
<main>
    {% block navbar %}
        {% include('fragments/navbar.html.twig') %}
    {% endblock %}

    {% for type in ['info','success', 'error'] %}
        {% for  message in app.session.flashBag.get(type) %}
            <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="container mt-4 mb-5" style="border-radius: 0.5rem; background-color: white; padding: 2rem;">
    {% block body %}{% endblock %}
    </div>
</main>

<footer class="footer mt-auto">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mb-3 mb-md-0">
                <h5 class="footer-title">SMARKET</h5>
                <p style="font-size: 0.9rem;">Your premier online marketplace for quality products at competitive prices.</p>
                <div class="social-icons">
                    <a href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" aria-label="Twitter"><i class="bi bi-twitter-x"></i></a>
                    <a href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" aria-label="LinkedIn"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
            <div class="col-md-6 text-md-end">
                <ul class="footer-links">
                    <li><a href="{{ path('login') }}">Contact Us</a></li>
                    <li><a href="{{ path('login') }}">Feedback</a></li>
                    <li>
                        <button class="legal-btn" onclick="window.location.href='{{ path('login') }}'">
                             Policies
                        </button>
                    </li>
                </ul>
            </div>
        </div>
        <div class="copyright">
            &copy; {{ "now"|date("Y") }} SMARKET. All rights reserved.
        </div>
    </div>
</footer>
</body>
</html>